name: Gwriting

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout source code
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    - name: Install dependencies
      run: npm install

    - name: Run script to post blog
      run: node index.js ${{ secrets.GITHUB_TOKEN }}

      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
